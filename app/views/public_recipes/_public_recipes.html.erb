<%= link_to recipe_path(recipe.id) do %>
  <div class='recipe-short'>
    <div class='recipe-left'>
      <div class='recipe-title'>
        <%= recipe.name %>
      </div>
      <div class='recipe-user'>
        <p>
          By: <%= recipe.user.name %>
        </p>
      </div>
    </div>
    <div class='recipe-right'>
      <p>
        Total food items: <%= food_items(recipe) %>
      </p>
      <p>
        Total price: <%= food_price(recipe) %>
      </p>
    </div>
  </div>
<% end%>